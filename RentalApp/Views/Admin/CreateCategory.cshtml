@model RentalApp.Models.EquipmentCategory
@{
    ViewData["Title"] = Model.Id == 0 ? "Dodaj kategoriê" : "Edytuj kategoriê";
}

<h2>@ViewData["Title"]</h2>

<form asp-action="@(Model.Id == 0 ? "CreateCategory" : "EditCategory")" method="post">
    @if (Model.Id != 0)
    {
        <input type="hidden" asp-for="Id" />
    }

    <div class="form-group">
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Zapisz</button>
    <a asp-action="Categories" class="btn btn-secondary">Anuluj</a>
</form>