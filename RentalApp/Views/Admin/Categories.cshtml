@model List<RentalApp.Models.EquipmentCategory>
@{
    ViewData["Title"] = "Kategorie sprzętu";
}

<h2>@ViewData["Title"]</h2>

<p>
    <a asp-action="CreateCategory" class="btn btn-success">Dodaj kategorię</a>
</p>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Nazwa</th>
            <th>Akcje</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var cat in Model)
        {
            <tr>
                <td>@cat.Name</td>
                <td>
                    <a asp-action="EditCategory" asp-route-id="@cat.Id" class="btn btn-primary btn-sm">Edytuj</a>
                    <form asp-action="DeleteCategory" asp-route-id="@cat.Id" method="post" style="display:inline" onsubmit="return confirm('Na pewno usunąć?');">
                        <button type="submit" class="btn btn-danger btn-sm">Usuń</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>