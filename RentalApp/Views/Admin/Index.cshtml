@model IEnumerable<Microsoft.AspNetCore.Identity.IdentityUser>

@{
    ViewData["Title"] = "Zarządzanie użytkownikami";
}

<h2>@ViewData["Title"]</h2>

<!-- Formularz wyszukiwania -->
<form method="get" asp-action="Index" class="mb-3">
    <div class="input-group">
        <input type="text" name="searchEmail" class="form-control" placeholder="Szukaj po e-mailu" value="@ViewBag.SearchEmail" />
        <button class="btn btn-outline-primary" type="submit">Szukaj</button>
    </div>
</form>

<!-- Tabela użytkowników -->
<table class="table table-striped">
    <thead>
        <tr>
            <th>Email</th>
            <th>Akcje</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.Email</td>
                <td>
                    <a asp-action="ManageRoles" asp-route-userId="@user.Id" class="btn btn-sm btn-secondary">Zarządzaj rolami</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<ul>
    <li><a asp-action="Dashboard">📊 Statystyki wypożyczeń</a></li>
    <li><a asp-action="Categories">📂 Kategorie sprzętu</a></li>
</ul>
