@model RentalApp.DTOs.EquipmentDto

<h2>Edytuj sprzęt</h2>

<form asp-action="Edit" method="post">
    <div class="form-group">
        <label>Nazwa</label>
        <input asp-for="Name" class="form-control" />
    </div>
    <div class="form-group">
        <label>Opis</label>
        <textarea asp-for="Description" class="form-control"></textarea>
    </div>
    <div class="form-group">
        <label>Kategoria</label>
        <input asp-for="Category" class="form-control" />
    </div>
    <div class="form-group">
        <label>Ilość dostępnych sztuk</label>
        <input asp-for="QuantityAvailable" class="form-control" />
    </div>
    <button type="submit" class="btn btn-primary mt-2">Zapisz zmiany</button>
    <a asp-action="Index" class="btn btn-secondary mt-2">Anuluj</a>
</form>